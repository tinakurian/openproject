<%= error_messages_for 'application' %>

<section class="form--section">
  <div class="form--field">
    <%= f.text_field :name, required: true, size: 25, container_class: '-middle' %>
    <span class="form--field-instructions">
      <%= t('oauth.application.instructions.name') %>
    </span>
  </div>
  <div class="form--field">
    <%= f.text_area :redirect_uri, required: true, container_class: '-middle' %>
    <span class="form--field-instructions">
      <%= t('oauth.application.instructions.redirect_uri_html', native_default: ::Doorkeeper.configuration.native_redirect_uri) %>
    </span>
  </div>
  <div class="form--field">
    <%= f.check_box :confidential %>
    <span class="form--field-instructions">
      <%= t('oauth.application.instructions.confidential') %>
    </span>
  </div>
  <div class="form--field">
    <%
      default_scopes = Doorkeeper.configuration.default_scopes.to_a
      optional_scopes = Doorkeeper.configuration.optional_scopes.to_a
      all_scopes = default_scopes + optional_scopes
      scope_options = all_scopes.map do |scope|
        translation = I18n.t("oauth.scopes.#{scope}", default: scope)
        [translation, scope]
      end
    %>

    <%= f.select :scopes,
                 scope_options,
                 {},
                 multiple: true,
                 container_class: '-middle' %>
    <span class="form--field-instructions">
      <%= t('oauth.application.instructions.scopes') %>
    </span>
  </div>
</section>

